<h1 class="mb-5">Properties</h1>

<div class="table table-responsive"> 
  <div class="indextable">
    <table class="table table-hover">      
      <thead>
        <tr>
          <th>User</th>
          <th>Group</th>
          <th>Identifier</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody >
        <% @properties.each do |property| %>
          <tr>
            <td class='green'><%= property.user_id %></td>
            <td><%= property.user_id %></td>
            <td><%= property.identifier %></td>


            <td><%= link_to 'Ver', group_property_path(@group, property) %></td>
            <td><%= link_to 'Editar', edit_group_property_path(@group, property) %></td>
            <td><%= link_to 'Borrar', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
     </div>
  
</div> 
<br>

<div class="mb-5"> 
  <%= link_to 'Nueva Propiedad', new_group_property_path %> |
  <%= link_to 'Ver Conjunto', @group %>
</div>
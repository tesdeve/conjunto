<h1 class="mb-5">Properties</h1>

<div class="table table-responsive"> 
  <div class="indextable">
    <table class="table table-hover">      
      <thead>
        <tr>
          <th>User</th>
          <th>Identifier</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody >
        <% @properties.each do |property| %>
          <tr>
            <td class='green'><%= property.user_id %></td>
            <td><%= property.identifier %></td>
            <td><%= link_to 'Show', property %></td>
            <td><%= link_to 'Edit', edit_property_path(property) %></td>
            <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
     </div>
  
</div> 
<br>

<div class="mb-5"> 
  <%= link_to 'New Property', new_property_path %>
</div>
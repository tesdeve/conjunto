
<%= simple_form_for(@persondetail) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :personable %>
    <%= f.input :nombre %>
    <%= f.input :apellido %>
    <%= f.input :edad %>
    <%= f.input :cedula %>
    <%= f.input :huella_digital %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

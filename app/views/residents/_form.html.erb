<div class="card formCard mt-5 mb-5">
  <div class="card-body">
    <div clas='formContainer'>
    <%= simple_form_for([@property, resident]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :principal %>
        <%#= f.association :property %>
        <%= f.input :property_id, label: @property.identifier, :as => :hidden, input_html: {value: @property.id}%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, :class => "btn btn-primary greenColor mb-2 mt-2"  %>
      </div>
    <% end %>
    </div>
  </div>
</div>
